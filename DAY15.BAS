1000 REM Advent of Code 2022, Day 15 - Beacon Exclusion Zone
1010 DEFDBL A-Z
1020 REM SX(),SY() - Sensor position
1030 REM NX(),NY() - Nearest probe position
1040 REM MD()      - Manhattan Distance from S to N
1050 DIM SX(35),SY(35),MD(35),SORT%(35)
1060 GOSUB 3000: REM Read Data
1170 GOSUB 2000: REM Part 1
1180 END
1190 '
2000 INPUT "Row";TY
2010 FOR I%=1 to NS%
2020  D=ABS(TY-SY(I%)):TX=SX(I%)
2030  IF D>MD(I%) THEN 2090
2040  W=MD(I%)-D
2050  REM MERGE SEG TX-W,TX+W
2060  PRINT"SEG",I%,TX-W,TX+W
2070  IF TX-W < MINS THEN MINS=TX-W
2080  IF TX+W > MAXS THEN MAXS=TX+W
2090 NEXT I%
2100 PRINT "Result",MAXS-MINS
2110 RETURN
2199 '
3000 REM Read Data
3010 INPUT "File";F$
3020 OPEN F$ FOR INPUT AS #1
3030 WHILE NOT EOF(1)
3040  NS%=NS%+1
3050  INPUT#1,SX(NS%),SY(NS%),NX,NY
3060  MD(NS%)=ABS(SX(NS%)-NX)+ABS(SY(NS%)-NY)
3070 WEND
3080 RETURN
